CXX      = g++ #compiler
CXXFLAGS = -Wall -c #flags
SOURCE   = ../sleepy_discord
INCLUDE  = ../include/sleepy_discord ../include/sleepy_discord/IncludeNonexistent
TARGET   = sleepy_discord

all: ${TARGET}.o ${TARGET}.a

$(TARGET).o: 
	$(CXX) $(CXXFLAGS) $(SOURCE)/*.cpp $(SOURCE)/*.c $(foreach dir, $(INCLUDE), -I $(dir))

$(TARGET).a:
	ar rv $@ *.o